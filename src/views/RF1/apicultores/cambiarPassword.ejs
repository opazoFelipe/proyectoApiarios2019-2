<%- include ('../../partials/header')  %>
<%- include ('../../partials/mensaje')  %>

<div id="mensaje"></div>

<script type="application/javascript" src="../javascript/RF1/validarFormularioApicultor.js"></script>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Cambiar Contraseña</h1>
                </div>
                <div class="card-body">
                    <form action="/apicultores/cambiarPassword" method="POST">
                        <div class="form-group">
                            <label for="password">Nueva Contraseña:</label>
                            <input type="password" name="password" class="form-control" placeholder="Contraseña">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Guardar" onclick="validarFormularioApicultor(this.form)">
                            <a href="/apicultores/datos" class="btn btn-secondary" style="float: right;">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('../../partials/footer')  %>