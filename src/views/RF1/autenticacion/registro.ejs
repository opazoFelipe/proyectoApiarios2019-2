<%- include ('../../partials/header')  %>
<%- include ('../../partials/mensaje')  %>

<!-- Mensaje de la validacion de campos con javascript en el navegador -->
<div id="mensaje"></div>

<script type="application/javascript" src="javascript/RF1/validarFormularioApicultor.js"></script>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h3> Solicitar Registro de Usuario </h3>
            </div>
            <div class="card-body">
                <form action="/registro" method="POST">
                    <div class="form-group row">
                        <label for="rut" class="col-md-2 col-form-label">Rut:</label>
                        <div class="col-md-10">
                            <% if(dataForm.tempData) {%> 
                                <input type="text" name="rut" class="form-control" value = "<%= dataForm.tempData.rut %>" placeholder="Rut">
                            <%} else {%>
                                <input type="text" name="rut" class="form-control"  placeholder="Rut">
                            <% } %> 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="correo" class="col-md-2 col-form-label">Correo:</label>
                        <div class="col-md-10">
                            <% if(dataForm.tempData) {%> 
                                <input type="email" name="correo" value = "<%= dataForm.tempData.correo %>" class="form-control" placeholder="Correo" autofocus>
                            <%} else {%>
                                <input type="email" name="correo"  class="form-control" placeholder="Correo">
                            <% } %>
                        </div> 
                    </div>
                    <div class="form-group row">
                        <label for="nombre" class="col-md-2 col-form-label">Nombre:</label>
                        <div class="col-md-10">
                            <% if(dataForm.tempData) {%> 
                                <input type="text" name="nombre" value = "<%= dataForm.tempData.nombre %>" class="form-control" placeholder="Nombre">
                            <%} else {%>
                                <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="apellidoPaterno" class="col-md-2 col-form-label">Apellido Paterno:</label>
                        <div class="col-md-10">
                            <% if(dataForm.tempData) {%> 
                                <input type="text" name="apellidoPaterno" value = "<%= dataForm.tempData.apellidoPaterno %>" class="form-control" placeholder="Apellido Paterno">
                            <%} else {%>
                                <input type="text" name="apellidoPaterno" class="form-control" placeholder="Apellido Paterno">
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="apellidoMaterno" class="col-md-2 col-form-label">Apellido Materno:</label>
                        <div class="col-md-10">
                            <% if(dataForm.tempData) {%> 
                                <input type="text" name="apellidoMaterno" value = "<%= dataForm.tempData.apellidoMaterno %>" class="form-control" placeholder="Apellido Materno">
                            <%} else {%>
                                <input type="text" name="apellidoMaterno" class="form-control" placeholder="Apellido Materno">
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="password" class="col-md-2 col-form-label">Contrase√±a:</label>
                        <div class="col-md-10">
                            <input type="text" name="password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 offset-md-9 col-sm-12 col-12">
                                <input type="submit" class="btn btn-primary btn-block" value="Enviar Solicitud" onclick="validarFormularioApicultor(this.form)">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include ('../../partials/footer')  %>